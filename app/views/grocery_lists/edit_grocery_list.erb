<br>
<%=@grocery.name%>
<form method="POST" action='/grocery-lists/<%=@grocery.id%>'>
  <label>Grocery List Name: </label>
  <input type='text' name='grocery_list[name]' placeholder='<%=@grocery.name%>'>
  <br>
  <%current_user.items.each do |item|%>
    <li><%=item.name%> <input type='checkbox' name='grocery_list[item_ids][]' value='<%=item.id%>' id='item_<%=item.id%>' <%= 'checked' if @grocery.items.include?(item) %>> </li>
  <%end%>
  <input type='hidden' id='hidden' name="_method" value='patch'>
  <input type='submit' name='Edit List'>
</form>
