<% if flash.has?(:notice) %>
  <h2><%= flash[:notice] %></h2>
<% end %>
<br>
<form method="POST" action='/grocery-lists/new'>
  <h2>Grocery List Name: <input type='text' name='grocery_list[name]'> </h2>
  <br>
  <h3>Items:</h3>
  <% current_user.items.each do |item| %>
    <li><%=item.name.capitalize%> <input id="item_<%=item.id%>" type="checkbox" name="grocery_list[item_ids][]" value="<%= item.id %>"> </li>
  <% end %>
  <input type='submit' name="Create Grocery List">
</form>

<form method="POST" action='/items/add'>
  <label> Add Item: </label>
  <input type='text' name='item[name]'>
  <input type='submit' value='add'>
</form>
