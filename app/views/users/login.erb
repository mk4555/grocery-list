<form method='POST' action='/login'>
  <label>Username: </label>
  <input type='text' name='username'>
  <br>
  <label>Password: </label>
  <input type='text' name='password'>
  <br>
  <input type='submit' value="Login">
</form>
<a href="/signup">Sign up</a>

<% if flash.has?(:message) %>
  <h2><%= flash[:message] %></h2>
<% end %>
